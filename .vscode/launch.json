    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Song Packs Server",
            "cwd": "${workspaceRoot}/util/song-packs",
            "program": "${workspaceRoot}/util/song-packs/node_modules/ts-node/dist/bin.js",
            "args": [ "index.ts" ],
            "stopOnEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "protocol": "inspector",
            "outFiles": [
                "${workspaceFolder}/util/**/*.*",
                "${workspaceFolder}/lib/**/*.*",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Render Chart",
            "cwd": "${workspaceRoot}/util/render",
            "program": "${workspaceRoot}/util/render/node_modules/ts-node/dist/bin.js",
            "args": [
                "index.ts",
                "-d",
                "true",
                "-f",
                "C:/Users/eric.lauffenburger/Downloads/In The Groove 1/In The Groove/Bouff/Bouff.sm"
            ],
            "stopOnEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "protocol": "inspector",
            "outFiles": [
                "${workspaceFolder}/util/**/*.*",
                "${workspaceFolder}/lib/**/*.*",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest All",
            "address": "localhost",
            "sourceMaps": true,
            "args": [
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
    ]
}